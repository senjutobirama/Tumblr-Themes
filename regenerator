 <script type="text/javascript">

$('body').hide().fadeIn(1500);
$('img').hide().fadeIn(2000);
    </script>

<script>
     var $container = $('.posts');
   $container.find('.notecount').each(function(){
       var n = $(this).html().split(' ')[0].replace(/,/g, '');
       if (n > 999) {
           n = Math.floor(n / 100) / 10;
           $(this).text(n + 'k notes');
       }
   });
</script>

</body>
