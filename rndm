<script>
tippy("[title]", {
  theme: "tp",

  arrow: false,
  delay: 100,
  followCursor: true,
  maxWidth: 300,
  placement: "top",
  offset: [0, 20],

  content(reference) {
    const title = reference.getAttribute("title");
    reference.removeAttribute("title");
    return title;
  }
});

</script>

<script>
$(window).scroll(function () {
  var height = $(window).scrollTop();
  if (height > 100) {
    $("#top").fadeIn();
  } else {
    $("#top").fadeOut();
  }
});

$("#top").each(function () {
  $(this).click(function () {
    $("html,body").animate({ scrollTop: 0 }, "slow");
    return false;
  });
});

</script>

<script>
$("body, .aq, .footer, .pp, .asker span").randombg();

$(".sb").pep({
  constrainTo: "window",
  cssEaseDuration: 1000
});

$(".sb").sideFollow({
  time: 600
});

$(function () {
  $(".posts img").popImg();
});

$(document).ready(function () {
  $("ion-icon").each(function () {
    $(this).css("color", randomColor());
  });
});

</script>

